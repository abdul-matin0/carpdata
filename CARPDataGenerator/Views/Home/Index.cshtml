            <div class="form-group">
                <label for="end">End Date:</label>
                <input type="date" class="form-control" id="end" asp-for="EndDate">
            </div>
        </div>
        <div class="col-12">
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="from" value="frommyclientaccount">T_from_My_client -> from_account
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="from" value="fromaccount">t_from -> from_account
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="from" value="frommyclientperson">T_from_My_client -> from_person
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="from" value="fromperson">t_from -> from_person
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="from" value="frommycliententity">T_from_My_client -> from_entity
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="from" value="fromentity">t_from -> from_entity
                </label>
            </div>
        </div>

        <div class="col-12">
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="to" value="tomyclientaccount">T_to_My_client -> to_account
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="to" value="toaccount">t_to -> to_account
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="to" value="tomyclientperson">T_to_My_client -> to_person
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="to" value="toperson">t_to -> to_person
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="to" value="tomycliententity">T_to_My_client -> to_entity
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" asp-for="to" value="toentity">t_to -> to_entity
                </label>
            </div>
        </div>
    </div>
    
</form>

