@model HomeViewModel  

@{
    ViewData["Title"] = "Home Page";
}


<form method="post">
    <div class="row">
        <div class="col-12">
            Date Range:

            <div class="form-group">
                <label for="start">Start Date:</label>
                <input type="date" class="form-control" id="start" asp-for="StartDate">
